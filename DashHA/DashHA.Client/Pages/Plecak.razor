@page "/plecak"

<div class="min-h-screen bg-gray-100 py-12 px-4 font-sans text-gray-800">
    <div class="max-w-6xl mx-auto bg-white rounded-2xl shadow-xl p-8 grid md:grid-cols-2 gap-10">
        <div>
            <img src="https://cdn.militaria.pl/media/catalog/product/2/1/21432_plecak-badger-outodoor-sarge-black-bo-bpsr30-blk.jpg?width=800&height=640&store=militaria_pl&image-type=image
"
                 alt="Plecak turystyczny"
                 class="rounded-xl shadow-md w-full object-cover max-h-[500px]" />
        </div>

        <div class="flex flex-col justify-between">
            <div>
                <h1 class="text-3xl font-extrabold mb-2">🎒 Plecak turystyczny 35L</h1>
                <p class="text-gray-600 mb-6">Lekki, pojemny i wytrzymały – idealny na wyprawy w góry, camping, biwak i nie tylko. W zestawie pas biodrowy i system wentylacji pleców.</p>

                <div class="text-4xl font-bold text-emerald-600">@currentPrice zł</div>
                <div class="text-sm text-gray-500 mt-1">Ostatnie przebicie: @lastBidAgo</div>
                <div class="text-sm text-gray-500">Licytujących: @bidders</div>
                <div class="text-sm text-red-500 font-semibold mt-2">⏱ Czas do końca: @countdown</div>
            </div>

            <!-- CECHY PLECAKA -->
            <div class="mt-6 grid grid-cols-2 gap-4 text-sm text-gray-600">
                <div class="flex items-center gap-2"><span class="text-indigo-600 text-lg">📦</span> 35L pojemności</div>
                <div class="flex items-center gap-2"><span class="text-indigo-600 text-lg">🧵</span> Wzmocniony materiał</div>
                <div class="flex items-center gap-2"><span class="text-indigo-600 text-lg">💨</span> Wentylacja pleców</div>
                <div class="flex items-center gap-2"><span class="text-indigo-600 text-lg">🔗</span> Regulowane paski</div>
            </div>

            <!-- LICYTACJA -->
            <div class="mt-8">
                <label class="block text-sm font-medium text-gray-700 mb-1">Twoja propozycja (zł):</label>
                <input @bind="bidAmount" type="number" class="w-full px-4 py-2 border rounded-lg shadow-sm text-lg focus:ring focus:ring-emerald-300" />

                <button @onclick="PlaceBid"
                        class="mt-4 w-full bg-emerald-600 text-white py-3 rounded-lg font-semibold hover:bg-emerald-700 transition">
                    Przebij ofertę
                </button>

                @if (bidMessage != null)
                {
                    <div class="mt-4 text-sm text-green-600">@bidMessage</div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private int currentPrice = 70;
    private int bidAmount;
    private string? bidMessage;
    private string lastBidAgo = "1 min temu";
    private int bidders = 132;
    private string countdown = "00:03:25";

    private System.Timers.Timer? timer;
    private TimeSpan remaining = TimeSpan.FromMinutes(3).Add(TimeSpan.FromSeconds(25));

    protected override void OnInitialized()
    {
        timer = new System.Timers.Timer(1000);
        timer.Elapsed += UpdateCountdown;
        timer.Start();
    }

    private void UpdateCountdown(object? sender, System.Timers.ElapsedEventArgs e)
    {
        if (remaining.TotalSeconds > 0)
        {
            remaining = remaining.Subtract(TimeSpan.FromSeconds(1));
            countdown = remaining.ToString(@"hh\:mm\:ss");
            InvokeAsync(StateHasChanged);
        }
        else
        {
            timer?.Stop();
            countdown = "Zakończona";
        }
    }

    private void PlaceBid()
    {
        if (bidAmount > currentPrice)
        {
            currentPrice = bidAmount;
            lastBidAgo = "przed chwilą";
            bidders += 1;
            bidMessage = $"✅ Twoja oferta {bidAmount} zł została złożona!";
        }
        else
        {
            bidMessage = "❌ Oferta musi być wyższa niż obecna cena!";
        }
    }

    public void Dispose()
    {
        timer?.Dispose();
    }
}