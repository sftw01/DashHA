@page "/aukcje"


<div class="min-h-screen bg-gray-50 font-sans text-gray-800">

    <!-- HERO -->
    <section class="relative bg-gradient-to-r from-violet-500 to-indigo-600 text-white py-24 px-6 text-center">
        <h1 class="text-5xl font-extrabold mb-4">Licytuj. Wygrywaj. Płać BLIKIEM.</h1>
        <p class="text-lg max-w-2xl mx-auto">Nowoczesna platforma aukcyjna połączona z Twoim Facebookiem. Przedmioty, które chcesz – bezpiecznie i błyskawicznie.</p>
        <a href="/aukcje" class="mt-8 inline-block bg-white text-indigo-700 px-6 py-3 rounded-full font-semibold shadow hover:bg-gray-100 transition">
            Rozpocznij licytację
        </a>

        <div class="absolute bottom-0 left-0 right-0 h-12 bg-white rounded-t-3xl mt-10"></div>
    </section>

    <!-- SEKJA Z AUKCJAMI -->
    <section class="bg-white pt-16 pb-24 px-6 relative z-10">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold">🔥 Najnowsze aukcje</h2>
            <p class="text-gray-500 mt-2">Codziennie nowe okazje – tylko tutaj</p>
        </div>
        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
            @foreach (var item in items)
            {
                <div class="bg-gray-50 p-5 rounded-2xl shadow hover:shadow-xl transition">
                    <img src="@item.ImageUrl" class="w-full h-48 object-cover rounded-xl mb-4" />
                    <h3 class="font-bold text-xl">@item.Title</h3>
                    <p class="text-sm text-gray-600">@item.Description</p>
                    <div class="mt-4 text-indigo-600 font-bold text-lg">@item.Price zł</div>
                    <a href="/aukcje" class="mt-4 block w-full text-center bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700">Licytuj</a>
                </div>
            }
        </div>
    </section>

    <!-- STATYSTYKI -->
    <section class="bg-gradient-to-tr from-indigo-600 to-violet-500 text-white py-20">
        <div class="max-w-6xl mx-auto px-6 grid md:grid-cols-3 gap-8 text-center">
            <div>
                <div class="text-4xl font-bold">150+</div>
                <div class="text-sm mt-2">Przedmiotów sprzedanych</div>
            </div>
            <div>
                <div class="text-4xl font-bold">95%</div>
                <div class="text-sm mt-2">Zadowolonych licytantów</div>
            </div>
            <div>
                <div class="text-4xl font-bold">6s</div>
                <div class="text-sm mt-2">Średni czas płatności BLIK</div>
            </div>
        </div>
    </section>

    <!-- DLACZEGO MY -->
    <section class="bg-white py-20">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold">Dlaczego warto z nami?</h2>
        </div>
        <div class="max-w-5xl mx-auto grid md:grid-cols-3 gap-8 px-6">
            @foreach (var feature in features)
            {
                <div class="text-center p-6 rounded-xl shadow-md bg-gray-50 hover:bg-gray-100 transition">
                    <div class="mb-4 text-indigo-500">
                        @feature.Icon
                    </div>
                    <h3 class="font-semibold text-xl mb-2">@feature.Title</h3>
                    <p class="text-sm text-gray-600">@feature.Description</p>
                </div>
            }
        </div>
    </section>

    <!-- CTA -->
    <section class="bg-indigo-700 text-white py-16 text-center">
        <h2 class="text-3xl font-bold mb-4">Nie przegap żadnej licytacji!</h2>
        <p class="mb-6">Obserwuj nas na Facebooku i licytuj bez rejestracji.</p>
        <a href="/aukcje" class="bg-white text-indigo-700 font-bold px-6 py-3 rounded-xl shadow hover:bg-gray-100 transition">Zaczynam!</a>
    </section>

    <!-- FOOTER -->
    <footer class="bg-gray-900 text-gray-400 text-center py-10">
        <p class="text-sm">&copy; @DateTime.Now.Year Licytacje FB | Konrad</p>
        <p class="text-xs mt-1">Blazor WebApp - powered by .NET 9</p>
    </footer>
</div>

