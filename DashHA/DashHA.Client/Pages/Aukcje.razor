        new AuctionItem("Zegarek sportowy", "Stan idealny", "https://prod-api.mediaexpert.pl/api/images/gallery_500_500/thumbnails/images/54/5497862/Zegarek-sportowy-GARMIN-Fenix-7-Pro-Solar-Edition-Szaro-czarny-skos.jpg", 50),
        new AuctionItem("Słuchawki bezprzewodowe", "Nowe, z pudełkiem", "https://ecsmedia.pl/c/ltc-symphony-bluetooth-sluchawki-bezprzewodowe-nauszne-z-mikrofonem-fm-sd-aux-zlote-b-iext120856600.jpg", 80),
        new AuctionItem("Plecak turystyczny", "Pojemność 35L", "https://cdn.militaria.pl/media/catalog/product/2/1/21432_plecak-badger-outodoor-sarge-black-bo-bpsr30-blk.jpg?width=800&height=640&store=militaria_pl&image-type=image", 70),
    };

    private List<Feature> features = new()
    {
        new Feature("Prostota", "Bez konta, bez logowania, po prostu licytuj", @<svg class="w-10 h-10 mx-auto" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M5 13l4 4L19 7"></path></svg>),
        new Feature("Blik", "Błyskawiczna płatność 6-cyfrowym kodem", @<svg class="w-10 h-10 mx-auto" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M20 12H4"></path><path d="M14 6l6 6-6 6"></path></svg>),
        new Feature("Zasięg", "Wszystko zintegrowane z Twoim Facebookiem", @<svg class="w-10 h-10 mx-auto" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"></circle><path d="M12 8v4l3 3"></path></svg>)
    };

    public class AuctionItem
    {
        public string Title { get; set; }
        public string Description { get; set; }
        public string ImageUrl { get; set; }
        public int Price { get; set; }

        public AuctionItem(string title, string description, string imageUrl, int price)
        {
            Title = title;
            Description = description;
            ImageUrl = imageUrl;
            Price = price;
        }
    }

    public class Feature
    {
        public string Title { get; set; }
        public string Description { get; set; }
        public RenderFragment Icon { get; set; }

        public Feature(string title, string description, RenderFragment icon)
        {
            Title = title;
            Description = description;
            Icon = icon;
        }
    }
}