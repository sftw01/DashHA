@page "/sluchawki"

@using System.Timers

<div class="min-h-screen bg-gray-50 py-12 px-4 font-sans text-gray-800">
    <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-10">
        <!-- ZDJĘCIE -->
        <div>
            <img src="https://ecsmedia.pl/c/ltc-symphony-bluetooth-sluchawki-bezprzewodowe-nauszne-z-mikrofonem-fm-sd-aux-zlote-b-iext120856600.jpg"
                 alt="Słuchawki bezprzewodowe"
                 class="rounded-xl shadow-md w-full object-cover max-h-[500px]" />
        </div>

        <!-- INFORMACJE O LICYTACJI -->
        <div class="flex flex-col justify-between">
            <div>
                <h1 class="text-3xl font-bold mb-2">🎧 Słuchawki bezprzewodowe LTC Symphony</h1>
                <p class="text-gray-600 mb-4">Nowe, fabrycznie zapakowane słuchawki Bluetooth z mikrofonem, radiem FM i wejściem AUX. Kolor: złoty.</p>

                <div class="text-4xl font-extrabold text-indigo-600">@currentPrice zł</div>
                <div class="text-sm text-gray-500 mt-1">Ostatnie przebicie: @lastBidAgo</div>
                <div class="text-sm text-gray-500">Licytujących: @bidders</div>
                <div class="text-sm text-red-500 font-semibold mt-2">⏳ Zostało: @countdown</div>
            </div>

            <!-- LICYTACJA -->
            <div class="mt-8">
                <label class="block text-sm font-medium text-gray-700 mb-1">Twoja propozycja (zł):</label>
                <input @bind="bidAmount" type="number" class="w-full px-4 py-2 border rounded-lg shadow-sm text-lg focus:ring focus:ring-indigo-300" />

                <button @onclick="PlaceBid"
                        class="mt-4 w-full bg-indigo-600 text-white py-3 rounded-lg font-semibold hover:bg-indigo-700 transition">
                    Przebij ofertę
                </button>

                @if (bidMessage != null)
                {
                    <div class="mt-4 text-sm text-green-600">@bidMessage</div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private int currentPrice = 150;
    private int bidAmount;
    private string? bidMessage;
    private string lastBidAgo = "14s temu";
    private int bidders = 274;
    private string countdown = "00:04:12"; // Symulowane

    private System.Timers.Timer? timer;
    private TimeSpan remaining = TimeSpan.FromMinutes(4).Add(TimeSpan.FromSeconds(12));

    protected override void OnInitialized()
    {
        timer = new System.Timers.Timer(1000);
        timer.Elapsed += UpdateCountdown;
        timer.Start();
    }

    private void UpdateCountdown(object? sender, ElapsedEventArgs e)
    {
        if (remaining.TotalSeconds > 0)
        {
            remaining = remaining.Subtract(TimeSpan.FromSeconds(1));
            countdown = remaining.ToString(@"hh\:mm\:ss");
            InvokeAsync(StateHasChanged);
        }
        else
        {
            timer?.Stop();
            countdown = "Zakończona";
        }
    }

    private void PlaceBid()
    {
        if (bidAmount > currentPrice)
        {
            currentPrice = bidAmount;
            lastBidAgo = "przed chwilą";
            bidders += 1;
            bidMessage = $"✅ Twoja oferta {bidAmount} zł została złożona!";
        }
        else
        {
            bidMessage = "❌ Oferta musi być wyższa niż obecna cena!";
        }
    }

    public void Dispose()
    {
        timer?.Dispose();
    }
}